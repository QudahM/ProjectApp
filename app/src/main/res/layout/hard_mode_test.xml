<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Sight Test Label -->
    <TextView
        android:id="@+id/text_sight_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard Mode\nTest"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:gravity="start" />

    <!-- Score Label -->
    <TextView
        android:id="@+id/text_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="120dp" />

    <!-- Score Counter -->


    <TextView
        android:id="@+id/text_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true" />

    <!-- Top Button -->
    <Button
        android:id="@+id/btn_top"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="UP"
        android:textSize="18sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/directionImage"
        android:layout_marginBottom="50dp" />

    <!-- Image in the center -->
    <ImageView
        android:id="@+id/directionImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerInParent="true" />

    <!-- Left Button -->
    <Button
        android:id="@+id/btn_left"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="LEFT"
        android:textSize="18sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_toStartOf="@id/directionImage"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp" />

    <!-- Right Button -->
    <Button
        android:id="@+id/btn_right"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="RIGHT"
        android:textSize="18sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@id/directionImage"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp" />

    <!-- Bottom Button -->
    <Button
        android:id="@+id/btn_bottom"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="DOWN"
        android:textSize="18sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_below="@id/directionImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:layout_below="@id/btn_bottom"
        android:text="Reaction Time: - ms"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
