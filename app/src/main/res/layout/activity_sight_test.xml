<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Score Label (Right Side, Below Action Bar) -->
    <TextView
        android:id="@+id/text_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="120dp"/>

    <!-- Score Counter (Placed Next to Score Label) -->
    <TextView
        android:id="@+id/text_score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignBaseline="@id/text_score_label"
        android:layout_toEndOf="@id/text_score_label"
        android:layout_marginStart="10dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text_sight_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sight\nTest"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <!-- Top Button -->
    <Button
        android:id="@+id/btn_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP"
        android:textSize="18sp"
        android:padding="30dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_above="@id/text_sight_test"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"/>

    <!-- Left Button -->
    <Button
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEFT"
        android:textSize="18sp"
        android:padding="20dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_toStartOf="@id/text_sight_test"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"/>

    <!-- Right Button -->
    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:textSize="18sp"
        android:padding="20dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@id/text_sight_test"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"/>

    <!-- Bottom Button -->
    <Button
        android:id="@+id/btn_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTTOM"
        android:textSize="18sp"
        android:padding="30dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF"
        android:layout_below="@id/text_sight_test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"/>
</RelativeLayout>
